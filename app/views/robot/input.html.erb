<h1>Hello World</h1>

<h3><%= @message %></h3>

<div class="row">
  <%= form_tag '/robot/input', :method => "get" do %>
    <%= text_field_tag(:input, 'place 0,0,NORTH', class: 'form-control') %>
    <%= submit_tag("Place!", class: 'btn btn-default') %>
  <% end %>
</div>

<a href="/robot/input?input=move">Move</a>
<a href="/robot/input?input=left">Left</a>
<a href="/robot/input?input=right">Right</a>
<a href="/">Reset</a>

<table id="chess_board" cellpadding="0" cellspacing="0">
<% (4).downto(0).each do |y| %>
    <tr>
      <% (0..4).each do |x| %>
      <td>
        <%= x %>, <%= y %>
        <% if @robot != nil && x == @robot.pos_x && y == @robot.pos_y %>
            <%= image_tag "mm-#{@robot.facing}.png" %>
        <% end %>
      </td>
      <% end %>
    </tr>
<% end %>
</table>

<h3><%= @report %></h3>