source 'https://rubygems.org'

gem 'rails', '4.1.6'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

group :doc do
  gem 'sdoc', '~> 0.4.0'
end

group :test do
  # Use the latest minitest gem (not bundled with Ruby)
  gem 'minitest'
end

group :development do
  # Use sqlite3 as the database for Active Record
  gem 'sqlite3'
  gem 'spring'
end

group :production do
  # gems specifically for Heroku go here
  gem "pg"
  # Required by Heroku for Rails4 logging
  gem 'rails_12factor'
end